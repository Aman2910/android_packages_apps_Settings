<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/custom_settings_title">

    <!-- Status bar settings -->
    <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.cyanogenmod.StatusBar"
        android:title="@string/status_bar_title" />

    <!-- Notification services -->
    <PreferenceScreen
        android:key="crdroid_notifications"
        android:fragment="com.android.settings.crdroid.crDroidNotifications"
        android:title="@string/crdroid_notifications_title" />

    <!-- PA's DSB -->
    <PreferenceScreen
        android:key="dynamic_system_bars"
        android:fragment="com.android.settings.crdroid.DSBSettings"
        android:title="@string/dynamic_system_bars_title" />

    <!-- Recent panel -->
    <PreferenceScreen
        android:key="recent_panel"
        android:fragment="com.android.settings.crdroid.RecentPanelSettings"
        android:title="@string/recent_panel_settings_title" />

    <!-- App sidebar -->
    <PreferenceScreen
        android:key="app_sidebar"
        android:fragment="com.android.settings.crdroid.AppSidebar"
        android:title="@string/app_sidebar_title"/>

    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.chameleonos.labs.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title" />

    <!-- Screen recorder -->
    <PreferenceScreen
        android:key="screen_recorder"
        android:title="@string/screen_recorder_title"
        android:fragment="com.android.settings.crdroid.ScreenRecorderSettings" />

    <!-- Advanced settings -->
    <PreferenceScreen
        android:key="advanced_settings"
        android:fragment="com.android.settings.crdroid.AdvancedSettings"
        android:title="@string/advanced_options_settings_title" />

</PreferenceScreen>
